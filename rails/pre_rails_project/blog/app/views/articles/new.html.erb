<h1>New Article</h1>
<%=form_for :article,url: articles_path do |f|%>
	<%if @article.errors.any?%>
		<div id="error_explanaton">
			<h2>
				<%= pluralize(@article.errors.count,"error")%> prevented this article to be submitted
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg|%>
					<li>
						<%= msg%>
					</li>
				<%end%>
			</ul>
		</div>
	<%end%>
	<p>
		<%= f.label :title%>
		<%= f.text_field :title%>

	</p>
	<p>
		<%= f.label :text%>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit :"fuuck OF"%>
	</p>
	<%end%>